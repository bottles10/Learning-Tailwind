<header class="sticky top-0">
     <nav class="flex flex-wrap items-center justify-between w-full py-4 md:py-0 px-4 text-lg text-gray-700 bg-white">
       <div>
          <%= link_to "Learning Tailwind", root_path, class: "font-bold" %>
       </div>
       
         <svg
            xmlns="http://www.w3.org/2000/svg"
            id="menu-button"
            class="h-6 w-6 cursor-pointer md:hidden block"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M4 6h16M4 12h16M4 18h16"
            />
          </svg>
       
       <div class="hidden w-full md:flex md:items-center md:w-auto" id="menu">
          <ul class="pt-4 text-base text-gray-700 md:flex md:justify-between md:pt-0">
            <%= link_to "Home", root_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Kitchen Sink", kitchen_sink_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Gradients", gradients_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Container", container_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Responsive", responsive_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Flexbox", flexbox_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Grid", grid_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Cards", cards_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
            <%= link_to "Buttons", buttons_path, class: "md:p-4 py-2 block hover:text-purple-400" %>
          </ul>
        </div>
    </nav>
  </header>


  <div class="">
    <%= yield %>
  </div>

  <script>
    const button = document.querySelector('#menu-button');
    const menu = document.querySelector('#menu');


    button.addEventListener('click', () => {
    menu.classList.toggle('hidden');
    });

  </script>
  </body>
</html>
